<div class="row">
  <div class="col-lg-12">
    <div class="box">
      <div class="row">
        <div class="col-lg-12">
          <section class="panel" style="border: 1px solid #D9D9D9;">
            <div class="panel-body">
              <%= form_tag(welcome_index_path(params[:search]), :method => :post, :class => "form form-horizontal") do %>
                <div class="row">
                  <div class="col-sm-12">
                    <div class="col-sm-2">
                      <%= select_tag "search[city]",options_for_select(Property::CITIES,(params[:search] && params[:search][:city])), :class => "area-width" %>
                    </div>
                    <div class="col-sm-2">
                      <%= select_tag "search[to_do]",options_for_select(Property::TODO_TYPE,(params[:search] && params[:search][:to_do])), :class => "area-width" %>
                    </div>
                    <div class="col-sm-3">
                      <%= select_tag "search[property_type]",options_for_select(Property::PROPERTY_TYPE,(params[:search] && params[:search][:property_type])), :class => "area-width" %>
                    </div>
                    <div class="col-sm-4">
                      <div class="col-sm-6">
                        <%= text_field_tag("search[min_price]", (params[:search] && params[:search][:min_price]), :class => "form-control", :placeholder=> "Min price") %>
                      </div>
                      <div class="col-sm-6">
                        <%= text_field_tag("search[max_price]", (params[:search] && params[:search][:max_price]), :class => "form-control", :placeholder=> "Max price") %>
                      </div>
                    </div>
                    <div class="col-sm-1">
                      <button type="submit" class="btn btn-success"><i class="icon-search"></i> Search</button>
                    </div>
                  </div>
                </div>
              <% end %>
              <h4><i class="icon-user"></i><span class="break"></s<pan><%= Property.all.size %> office spaces for rent </h4>
            </div>
          </section>
        </div>
      </div>
      <div id="property-table" class="box-content">
        <table class="table table-striped table-bordered bootstrap-datatable datatable">
          <thead>
            <tr>
              <th>ID</th>
              <th>Photo</th>
              <th>Project</th>
              <th>Area</th>
              <th>City</th>
              <th>Posted</th>
              <th>Price<span class="text-muted"> (Rs)</span></th>
              <th>Size<span class="text-muted"> (sqrt)</span></th>
              <th>For sale/buy/rent</th>
              <th>Contact</th>
            </tr>
          </thead>
          <tbody>
            <% @properties.each do |property| %>
              <tr>
                <td><%= property.id %></td>
                <td><img src="<%= property.image %>" style="height: 23px; width: 23px;"> x 3</td>
                <td><%= link_to(property.project, edit_property_path(property.id)) %></td>
                <td><%= property.area %></td>
                <td><%= property.city %></td>
                <td><%= property.created_at.to_s(:short) %></td>
                <td><%= property.price %></td>
                <td><%= property.size %></td>
                <td><span class="label label-primary"><%= Property::TODO_TYPE.keys[property.to_do] if  property.to_do %></span></td>
                <td><%= property.contact %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= will_paginate @properties, renderer: BootstrapPagination::Rails  unless params[:search].present? %>
      </div>
    </div>
  </div><!--/col-->

</div><!--/row-->