<div class="row">
	<div class="col-lg-12">
		<div class="box">
			<div class="row">
        <div class="col-lg-12">
          <section class="panel">
            <div class="panel-body">
              <button class="btn btn-primary btn-lg" data-toggle="modal" data-target="#search-size">
							  <i class="icon-search"></i>
							  Search By Property Size
							</button>
							<button class="btn btn-primary btn-lg" data-toggle="modal" data-target="#search-price">
							  Search By Property Price
							</button>
							<button class="btn btn-primary btn-lg" data-toggle="modal" data-target="#search-todo">
							  Search By To-Do
							</button>
							<div class="modal fade" id="search-size" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
							  <div class="modal-dialog">
							    <div class="modal-content">
							      <div class="modal-header">
							        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
							        <h4 class="modal-title" id="myModalLabel">Search By Property Size</h4>
							      </div>
							      <div class="modal-body">
							        <form aciton="/welcome/search" class="form-inline" role="form">
						          	<div class="row">
						          		<div class="col-sm-12">
								            <label class="control-label col-sm-2" for="exampleInputEmail2">Min Sqft</label>
								            <div class="col-sm-10"><input type="text" class="form-control" id="exampleInputEmail2"></div>
								          </div>
								        </div>
								        <br/>
						            <div class="row">
						            	<div class="col-sm-12">
								            <label class="control-label col-sm-2" for="exampleInputPassword2">Max Sqft</label>
								            <div class="col-sm-10"><input type="text" class="form-control" id="exampleInputPassword2"></div>
								          </div>
								        </div>
							          <br/><br/>
							          <div style="margin-left: 19.667%;">
							            <button type="submit" class="btn btn-success"><i class="icon-search"></i> Search</button>
							          </div>
							        </form>
							      </div>
							    </div>
							  </div>
							</div>
							<div class="modal fade" id="search-price" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
							  <div class="modal-dialog">
							    <div class="modal-content">
							      <div class="modal-header">
							        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
							        <h4 class="modal-title" id="myModalLabel">Search By Property Price</h4>
							      </div>
							      <div class="modal-body">
							        <form aciton="/welcome/search" class="form-inline" role="form">
							          <div class="row">
								          <div class="col-sm-12">
								            <label class="control-label col-sm-2" for="exampleInputEmail2">Min Price</label>
								            <div class="col-sm-10"><input type="text" class="form-control" id="exampleInputEmail2"></div>
								          </div>
								        </div>
								        <br/>
								        <div class="row">
								          <div class="col-sm-12">
								            <label class="control-label col-sm-2" for="exampleInputPassword2">Max Price</label>
								            <div class="col-sm-10"><input type="text" class="form-control" id="exampleInputPassword2"></div>
								          </div>
								        </div>
								        <br/><br/>
								        <div style="margin-left: 19.667%;">
							            <button type="submit" class="btn btn-success"><i class="icon-search"></i> Search</button>
							          </div>
							        </form>
							      </div>
							    </div>
							  </div>
							</div>
							<div class="modal fade" id="search-todo" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
							  <div class="modal-dialog">
							    <div class="modal-content">
							      <div class="modal-header">
							        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
							        <h4 class="modal-title" id="myModalLabel">Search By To-Do</h4>
							      </div>
							      <div class="modal-body">
							        <form aciton="/welcome/search" class="form-inline" role="form">
							          <div class="form-group">
							            <select name="property[to_do]" id="property_to_do" class="select optional"><option value="">All</option>
														<option value="0">Rent</option>
														<option value="1">Sale</option>
														<option value="2">Purchase</option>
													</select>
							          </div>
							          <button type="submit" class="btn btn-success"><i class="icon-search"></i> Search</button>
							        </form>
							      </div>
							    </div>
							  </div>
							</div>
            </div>
          </section>
        </div>
      </div>
			<div class="box-header" data-original-title>
				<h2><i class="icon-user"></i><span class="break"></span><%= Property.all.size %> office spaces for rent </h2>
				<div class="box-icon">
					<a href="table.html#" class="btn-setting"><i class="icon-wrench"></i></a>
					<a href="table.html#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
					<a href="table.html#" class="btn-close"><i class="icon-remove"></i></a>
				</div>
			</div>
			<div class="box-content">
				<table class="table table-striped table-bordered bootstrap-datatable datatable">
				  <thead>
					  <tr>
					  	<th>ID</th>
						  <th>Photo</th>
				      <th>Project</th>
				      <th>Area</th>
				      <th>City</th>
				      <th>Posted</th>
				      <th>Price<span class="text-muted"> (Rs)</span></th>
				      <th>Size<span class="text-muted"> (sqrt)</span></th>
				      <th>For sale/buy/rent</th>
				      <th>Contact</th>
					  </tr>
				  </thead>
				  <tbody>
				    <% @properties.each do |property| %>
				      <tr>
				      	<td><%= property.id %></td>
				        <td><img src="/photo10.jpg" style="height: 23px; width: 23px;"> x 3</td>
				        <td><%= property.project %></td>
				        <td><%= property.area %></td>
				        <td><%= property.city %></td>
				        <td><%= property.created_at.to_s(:short) %></td>
				        <td><%= property.price %></td>
				        <td><%= property.size %></td>
				        <td><span class="label label-primary"><%= Property::TODO_TYPE.keys[property.to_do] if  property.to_do %></span></td>
				        <td><%= property.contact %></td>
				      </tr>
				    <% end %>
				  </tbody>
			  </table>
			  <%= will_paginate @properties, renderer: BootstrapPagination::Rails %>
			</div>
		</div>
	</div><!--/col-->

</div><!--/row-->