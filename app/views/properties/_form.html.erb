<%= simple_form_for @property  do |f|  %>
  <% if @property.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@property.errors.count, "error") %> prohibited this property from being saved:</h2>

      <ul>
      <% @property.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.input :project %>
  <%= f.input :area %>
  <%= f.input :city %>
  <%= f.input :price %>
  <%= f.input :size %>
  <%= f.input(:to_do, :collection => Property::TODO_TYPE, :include_blank => "Please Select TO-DO Type") %>
  <%= f.input :contact %>
  <%= f.input :professional_type, :collection => Property::PROFESSIONAL_TYPE, :include_blank => "Please Select Professional Type" %>
  <%= f.input :data_available %>
  <%= f.input :amenities %>
  <%= f.input :name %>
  <%= f.input :company %>
  <%= f.input :email %>
  <%= f.input :phone %>
  <div class='row'>
    <div class='col-md-offset-3'>
      <%= button_tag(type: 'submit', class: "btn btn-success") do %>
        <i class="icon-save icon-white"></i> Submit
      <% end %>
    </div>
  </div>
<% end %>
