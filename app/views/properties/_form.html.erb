<div class="row">
  <div class="col-lg-12">
    <div class="box">
      <div class="box-header">
        <h2>
          <i class="icon-edit"></i>
          Post Your Listing
        </h2>
        <div class="box-icon">
          <a class="btn-setting" href="form-elements.html#"><i class="icon-wrench"></i></a>
          <a class="btn-minimize" href="form-elements.html#"><i class="icon-chevron-up"></i></a>
          <a class="btn-close" href="form-elements.html#"><i class="icon-remove"></i></a>
        </div>
      </div>
      <div class="box-content">
        <%= simple_form_for @property  do |f|  %>
          <% if @property.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@property.errors.count, "error") %> prohibited this property from being saved:</h2>

              <ul>
              <% @property.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
              </ul>
            </div>
          <% end %>
          <fieldset>
            <div class="col-sm-3">
              <div class="box">
                <div class="lead">
                  <i class="icon-github text-contrast"></i>
                  Project Detail
                </div>
              </div>
            </div>
            <div class="col-sm-9">
              <%= f.input :project %>
              <%= f.input :area %>
              <%= f.input :city %>
              <%= f.input :size %>
              <%= f.input(:to_do, :collection => Property::TODO_TYPE, :include_blank => "Please Select TO-DO Type") %>
              <%= f.input :contact %>
            </div>
          </fieldset>
          <hr class="hr-normal">
          <fieldset>
            <div class="col-sm-3">
              <div class="box">
                <div class="lead">
                  <i class="icon-money text-contrast"></i>
                  Pricing Detail
                </div>
              </div>
            </div>
            <div class="col-sm-9">
              <%= f.input :price %>
              <%= f.input :professional_type, :collection => Property::PROFESSIONAL_TYPE, :include_blank => "Please Select Professional Type" %>
              <%= f.input :data_available %>
            </div>
          </fieldset>
          <hr class="hr-normal">
          <fieldset>
            <div class="col-sm-3">
              <div class="box">
                <div class="lead">
                  <i class="icon-comment text-contrast"></i>
                  Comments
                </div>
              </div>
            </div>
            <div class="col-sm-9">
              <%= f.input :comments, :rows => "7", :cols=> "11" %>
            </div>
          </fieldset>
          <hr class="hr-normal">
          <fieldset>
            <div class="col-sm-3">
              <div class="box">
                <div class="lead">
                  <i class="icon-comment text-contrast"></i>
                  Main Contact
                </div>
              </div>
            </div>
            <div class="col-sm-9">
              <%= f.input :name %>
              <%= f.input :company %>
              <%= f.input :email %>
              <%= f.input :phone %>
            </div>
          </fieldset>
          <div class="form-actions">
            <div class="row">
              <div class="col-sm-7 col-sm-offset-5">
                <%= button_tag(type: 'submit', class: "btn btn-success btn-lg") do %>
                  <i class="icon-save icon-white"></i> Submit Listing
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

