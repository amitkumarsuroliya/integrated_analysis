<%= form_tag(get_in_touch_properties_path(params[:search]), :method => :post, :class => "form form-horizontal") do %>
  <div class="row">
    <div class="col-sm-12">
      <div class="form-group">
        <div class="col-md-2">
          <%= label_tag "message", "Message", :class => "control-label label-class" %>
        </div>
        <div class="col-md-9">
          <%= text_area_tag("search[area]", (params[:search] && params[:search][:area]), :class => "form-control", :placeholder=> "Message Upto 120 words") %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-2">
          <%= label_tag "email", "Email", :class => "control-label label-class" %>
        </div>  
        <div class="col-md-4">
          <%= text_field_tag("search[email]", (params[:search] && params[:search][:email]), :class => "form-control", :placeholder=> "email") %>
        </div>
        <div class="col-md-1">
          <%= label_tag "mobil", "Mobile", :class => "control-label label-class" %>
        </div>  
        <div class="col-md-4">
          <%= text_field_tag("search[mobile]", (params[:search] && params[:search][:mobile]), :class => "form-control", :placeholder=> "mobile") %>
        </div>
      </div>
      <div class="form-group">  
        <div class="col-md-2"></div> 
        <div class="col-md-2">
          <button type="submit" class="btn btn-success"><i class="icon-search"></i> Submit</button>
        </div>
      </div>
    </div>
  </div>
<% end %>