<div class="container">
  <div class="row">
    <div class="col-md-12" style="margin-left:20px"><h3><%= "#{@property.project} for #{Property::TODO_TYPE.keys[@property.to_do]} at #{@property.area} "%></h3>
      <span><h4>Sector-5, Rambagh</h4></span>
    </div>
    <div class="col-md-8" style="padding-top:15px; border-top: 1px solid #428bca;">
      <div class="col-md-6"><img src="/images/yes.jpg"></div>
      <div class="col-md-6">
        <span class="col-md-4"><h4 style="margin-bottom:0px">3BHK</h4><small class="type-info">For Sale</small></span>
        <span class="col-md-4"><h4 style="margin-bottom:0px"><%="#{@property.price} Lacs" %></h4>
          <small class="type-info">Negotiable</small>
        </span>
        <span class="col-md-4"><h4 style="margin-bottom:0px"><%=@property.size %></h4>
          <small class="type-info">Sq. Ft</small>
        </span>
        <table class="table">
          <tr>
            <td><strong>Type of Property</strong></td>
            <td>Apartment</td>
          </tr>
          <tr>
            <td><strong>Project Name</strong></td>
            <td><%=@property.project%></td>
          </tr>
          <tr>
            <td><strong>Locality</strong></td>
            <td><%=@property.area%></td>
          </tr>
          <tr>
            <td><strong>City</strong></td>
            <td><%=@property.city%></td>
          </tr>
          <tr>
            <td><strong>Type</strong></td>
            <td><span class="label label-primary"><%= Property::TODO_TYPE.keys[@property.to_do] if  @property.to_do %></span></td>
          </tr>
          <tr>
            <td><strong>Flooring</strong></td>
            <td>Wooden</td>
          </tr>
          <tr>
            <td><strong>Carpet Area</strong></td>
            <td>1900 Sq.ft</td>
          </tr>
        </table>
      </div>
      <div class="col-md-12">
        <div class="well well-lg">
          Property Posted By:- <strong>Amit Surolia</strong>&nbsp<em>(owner)</em>
          <span class="pull-right" ><%="Call: +91-#{@property.contact}"%></span>
        </div>
        <h4>Location Details</h4>
        <div class="col-md-6">
          <table class="table borderless">
            <tr>
              <td style="border:none"><strong>Address</strong></td>
              <td style="border:none">Janta Colony, Near Ghat Gate</td>
            </tr>
            <tr>
              <td style="border:none"><strong>City</strong></td>
              <td style="border:none"><%=@property.city%></td>
            </tr>
            <tr>
          </table>
        </div>  
      </div>
    </div>
    <%= render "contact_form" %>
    <%= render "premium" %>
  </div>
</div>
